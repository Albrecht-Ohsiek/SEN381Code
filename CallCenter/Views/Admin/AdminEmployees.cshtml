@model IEnumerable<CallCenter.Models.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
</head>

<body>
    @Html.Partial("~/Views/Shared/Header.cshtml")
    @Html.Partial("~/Views/Shared/AdminPanel.cshtml")
    @ViewBag.Message
    <div class="admin-employees">
        <div class="div">
            <div class="overlap">
                <div class="group">
                    <div class="overlap-group-wrapper">
                        <div class="overlap-group">
                            <img class="vector" src="img/vector.svg" />
                            <div class="text-wrapper">Employees</div>
                        </div>
                    </div>
                    <div class="frame">
                        <div class="div-wrapper">
                            <div class="overlap-group-2">
                                <div class="rectangle"></div>
                                <div class="text-wrapper-2">View Logs</div>
                                <img class="img" src="img/image.svg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-display">
                <table>
                    <thead>
                        <tr>
                            <th class="sortable" data-sort="employeeId">Employee ID</th>
                            <th class="sortable" data-sort="employeeName">Employee Name</th>
                            <th class="sortable" data-sort="contactNumber">
                                Contact Number
                            </th>
                            <th class="sortable" data-sort="serviceArea">Service Area</th>
                            <th class="sortable" data-sort="serviceTypes">Service Types</th>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employeeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employeeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.department)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <p>No data available.</p>
                        }

                    </tbody>
                </table>
            </div>
            <div class="overlap-wrapper">
                <div class="overlap-3">
                    <div class="text-wrapper-26">Add</div>
                </div>
            </div>
            <div class="group-6">
                <div class="overlap-3">
                    <div class="text-wrapper-27">Remove</div>
                </div>
            </div>
            <div class="group-7">
                <div class="overlap-3">
                    <div class="text-wrapper-28">Edit</div>
                </div>
            </div>
            <div class="group-8">
                <div class="text-wrapper-29">Search:</div>
                <div class="rectangle-2"></div>
                <div class="overlap-4">
                    <div class="text-wrapper-30">Search</div>
                </div>
            </div>
            <div class="text-wrapper-31">EMPLOYEES</div>
            <img class="line-2" src="img/line-16.svg" />
        </div>
    </div>
    <script>
        const headerCells = document.querySelectorAll(".admin-employees th");
        let selectedHeader = null;

        headerCells.forEach((headerCell) => {
            headerCell.addEventListener("click", () => {
                if (selectedHeader) {
                    selectedHeader.classList.remove("selected");
                }
                selectedHeader = headerCell;
                selectedHeader.classList.add("selected");
            });
        });
    </script>
</body>

</html>