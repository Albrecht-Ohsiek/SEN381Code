                        <th class="sortable" data-sort="employeeName">@Html.DisplayNameFor(model => model.employeeName)
                        </th>
                        <th class="sortable" data-sort="contactNumber">
                            @Html.DisplayNameFor(model => model.phoneNumber)
                        </th>
                        <th class="sortable" data-sort="serviceArea">@Html.DisplayNameFor(model => model.department)
                        </th>
                        <th class="sortable" data-sort="serviceTypes">@Html.DisplayNameFor(model => model.emailAddress)
                        </th>
                </thead>
                <tbody>
                    @if (Model != null)

                    {
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employeeId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.employeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.department)
                                </td>
                                <td>
                                    <a href="/Admin/EmployeeEdit/{@item.employeeName}">Edit</a> |
                                    <a href="/Admin/EmployeeDetails/{@item.employeeId}">Details</a>
                                </td>
                            </tr>
                        }
                    }

                    else

                    {
                        <p>No data available.</p>
                    }

                </tbody>
            </table>
