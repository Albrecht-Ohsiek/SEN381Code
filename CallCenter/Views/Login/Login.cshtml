@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container" style="max-width: 300px; margin: 0 auto; text-align: center;">
    <h2 style="font-size: 24px; margin: 20px 0;">Login</h2>
    <form method="post" action="/Login/Login">
        <div class="input-group" style="margin-bottom: 10px;">
            <label for="username" style="display: block; font-weight: bold;">Username:</label>
            <input type="text" id="username" name="username" required style="width: 100%; padding: 5px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <div class="input-group" style="margin-bottom: 10px;">
            <label for="pwd" style="display: block; font-weight: bold;">Password:</label>
            <input type="password" id="pwd" name="password" required style="width: 100%; padding: 5px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message" style="color: red; margin: 10px 0;">
                @ViewBag.ErrorMessage
            </div>
        }
        <button type="submit" class="submit-button" style="background-color: #007bff; color: #fff; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer;">Login</button>
    </form>
</div>